DirectoryIndex index.html

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  RewriteCond %{HTTPS} !=on [OR]
  RewriteCond %{HTTP_HOST} !^www\.affinitytaxservices\.com$ [NC]
  RewriteRule ^ https://www.affinitytaxservices.com%{REQUEST_URI} [L,R=301]

  # Do NOT rewrite API or control panel paths
  RewriteRule ^(api|phpmyadmin|cpanel|webmail)/ - [L]

  # Serve existing files and directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirect all other requests to index.html for SPA routing
  RewriteRule ^ index.html [L]
</IfModule>

