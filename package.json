{
  "name": "ats-main",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://www.affinitytaxservices.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/affinitytaxservices/ats-application.git"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^5.17.1",
    "@mui/material": "^5.17.1",
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.4.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.0",
    "framer-motion": "^12.23.11",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.15.2",
    "nodemailer": "^6.9.11",
    "react": "^18.2.0",
    "react-countup": "^6.5.3",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.14.2",
    "recharts": "^2.15.3"
  },
  "scripts": {
    "start": "cross-env NODE_OPTIONS=--max-old-space-size=4096 react-scripts start",
    "build": "cross-env CI=false react-scripts build",
    "build:prod": "cross-env CI=false GENERATE_SOURCEMAP=false react-scripts build",
    "build:centos": "cross-env NODE_OPTIONS=--max-old-space-size=4096 CI=false GENERATE_SOURCEMAP=false react-scripts build",
    "start:server": "node server/index.js",
    "migrate": "node -r dotenv/config server/scripts/run_migrations.js",
    "seed": "node -r dotenv/config server/scripts/seed_demo_data.js",
    "test": "react-scripts test --watchAll=false",
    "test:ci": "react-scripts test --coverage --watchAll=false --ci --passWithNoTests",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "ignoreRestSiblings": true
        }
      ],
      "import/no-anonymous-default-export": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "babel-loader": "^10.0.0",
    "baseline-browser-mapping": "^2.8.30",
    "cross-env": "^10.1.0",
    "html-webpack-plugin": "^5.6.3",
    "react-scripts": "^5.0.1",
    "source-map-loader": "^5.0.0",
    "webpack-dev-server": "^5.2.2"
  },
  "proxy": "http://localhost:5000"
}
